doctype html
html(ng-app="app")
	head
		title= typeof(title)!=="undefined"? title : "untitled"
		meta(charset="UTF-8")
		meta(name="veiwport", content="width=device-width, initial-scale=1.0")
		// base(href="/") // this is base tag for locationProvider
		link(rel="shortcut icon", href="logo.ico", type="image/x-icon")
		link(rel="stylesheet", href="ng-grid/ng-grid.css")
		link(rel="stylesheet", href="app.css")

	body
	nav(navbar navbar-default navbar-fixed-top)
		div(class="container")
			a(class="navbar-brand", href="/#/") Healthy Living
			ul(class="nav navbar-nav")
				li: a(href="/#/articles") Articles
				li: a(href="/#/gallery") Gallary
				li: a(href="/#/subscribers") Subscribers
			// Add your site or application content here
	div(class="container" ng-view)


		script(src="jquery-2.1.3.js")
		script(src="bootstrap.js")
		script(src="angular/angular.js")
		script(src="angular-route/angular-route.js")
		script(src="angular-bootstrap/ui-bootstrap-tpls.js")
		script(src="ng-grid/ng-grid-2.0.14.min.js")
		script(src="app.js")
		