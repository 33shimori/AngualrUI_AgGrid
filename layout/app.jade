doctype html
html(ng-app="app")
	head(ng-controller="helloWorldCtrl")
		title= typeof(title)!=="undefined"? title : "untitled"
		link(rel="stylesheet", href="app.css")
		meta(charset="UTF-8")
		meta(name="veiwport", content="width=device-width, initial-scale=1.0")
	body(controller="peopleCtrl")
		center: button(ng-click="ShowForm()", ng-hide="formVisibility") Add Contact
		div(ng-show="formVisibility", class="wrapper")
			h2 Add a Contact
				p Name:
					input(type="text", ng-model="newPerson.name")
				p Phone:
					input(type="text", ng-model="newPerson.phone")
				p City:
					input(type="text", ng-model="newPerson.city")
					button(ng-click="Save()") Save
		h1 Address Book
		div(class="wrapper")
			div(class="contact-item" ng-repeat="person in people|orderBy:'name'")
				div(class="name") {{person.name}} - {{person.phone}}
				div(class="city")
					span{{person.city}}

		script(src="angular/angular.js")
		script(src="app.js")
		